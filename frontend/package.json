{
  "name": "PhillyReads",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "react-scripts": "2.0.3"
  },
  "dependencies": {
    "bootstrap": "^4.1.3",
    "husky": "^1.1.0",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "prettier": "^1.14.3",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-router-dom": "^4.3.1",
    "reactstrap": "^6.5.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,scss}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "format": "prettier --single-quote --write '{src,test}/**/*.{js,jsx,json,scss}'",
    "format:check": "prettier --single-quote --list-different \"{src,test}/**/*.js\"",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
